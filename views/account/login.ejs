
<%- include('../partials/head') %> <!-- head partial is loaded here -->

    <body>
        <div id="wrapper">
            <%- include('../partials/header') %> <!-- header included -->
                <%- include('../partials/navigation') %> <!-- navigation included -->

                    <main>
                        <h1>
                            <%= title %>
                        </h1>

                        <% if (errors) { %>
                        <ul class="notice">
                            <% errors.array().forEach(error=> { %>
                                <li>
                                    <%= error.msg %>
                                </li>
                                <% }) %>
                        </ul>
                        <% } %>

                        <!-- Display flash message if any -->
                        <%- messages() %>

                        <form action="/account/login" method="post" class="login-form">
                            <label for="email">Email Address</label>
                            <input type="email" id="email" name="email" placeholder="you@example.com" required value="<%= locals.account_email %>">

                            <label for="password">Password</label>
                            <input type="password" id="password" name="password" placeholder="Enter your password"
                                required>

                            <button type="submit">Login</button>
                        </form>
                        <p class="register-link">
                            Don't have an account? <a href="/account/register">Register here</a>
                        </p>
                    </main>

                    <%- include('../partials/footer') %> <!-- footer included -->
        </div>
    </body>