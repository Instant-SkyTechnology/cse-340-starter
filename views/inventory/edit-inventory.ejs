<link rel="stylesheet" href="/css/styles.css" media="screen">

<body>
    <div id="wrapper">

        <main>
            <h1>
                <%= title %>
            </h1>

            <!-- Display flash messages -->
            <%- messages() %>

                <!-- Display server-side validation errors -->
                <% if (errors) { %>
                    <ul class="notice">
                        <% errors.array().forEach(error=> { %>
                            <li>
                                <%= error.msg %>
                            </li>
                            <% }) %>
                    </ul>
                    <% } %>

                        <strong>
                            <p>All fields are required.</p>
                        </strong>

                        <form class="login-form" action="/inv/update" method="post" id="updateForm">

                            <!-- Hidden Inventory ID -->
                            <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
                                <% } %>>

                            <!-- Classification Select -->
                            <div class="form-group">
                                <label for="classificationList">Classification:</label>
                                <%- classificationSelect %>
                            </div>

                            <!-- Vehicle Fields -->
                            <div class="form-group">
                                <label for="inv_make">Make:</label>
                                <input type="text" id="inv_make" name="inv_make" required
                                    value="<%= typeof inv_make !== 'undefined' ? inv_make : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="inv_model">Model:</label>
                                <input type="text" id="inv_model" name="inv_model" required
                                    value="<%= typeof inv_model !== 'undefined' ? inv_model : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="inv_year">Year:</label>
                                <input type="number" id="inv_year" name="inv_year" required
                                    value="<%= typeof inv_year !== 'undefined' ? inv_year : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="inv_description">Description:</label>
                                <textarea id="inv_description" name="inv_description"
                                    required><%= typeof inv_description !== 'undefined' ? inv_description : '' %></textarea>
                            </div>

                            <div class="form-group">
                                <label for="inv_price">Price:</label>
                                <input type="number" step="0.01" id="inv_price" name="inv_price" required
                                    value="<%= typeof inv_price !== 'undefined' ? inv_price : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="inv_miles">Miles:</label>
                                <input type="number" step="0.1" id="inv_miles" name="inv_miles" required
                                    value="<%= typeof inv_miles !== 'undefined' ? inv_miles : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="inv_color">Color:</label>
                                <input type="text" id="inv_color" name="inv_color" required
                                    value="<%= typeof inv_color !== 'undefined' ? inv_color : '' %>">
                            </div>

                            <div class="form-group">
                                <label for="inv_image">Image Path:</label>
                                <input type="text" id="inv_image" name="inv_image" required
                                    value="<%= typeof inv_image !== 'undefined' ? inv_image : '/images/no-image.png' %>">
                            </div>

                            <div class="form-group">
                                <label for="inv_thumbnail">Thumbnail Path:</label>
                                <input type="text" id="inv_thumbnail" name="inv_thumbnail" required
                                    value="<%= typeof inv_thumbnail !== 'undefined' ? inv_thumbnail : '/images/no-image-tn.png' %>">
                            </div>

                            <button type="submit" id="updateBtn" disabled>Update Vehicle</button>

                        </form>

        </main>

    </div>
    
    <script src="/js/inv-update.js"></script>
</body>

</html>